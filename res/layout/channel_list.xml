<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- below HorizontalScrollView for bottom button is for debugging and future use. -->
    <HorizontalScrollView
        android:id="@+id/toolbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chlist_bottom_btn_height"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/btn_add_channel"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_channel"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_items_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_add_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_del_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_rename_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/rename_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_del_dnfiles"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_dnfiles"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/setting"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_predefined"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/predefined"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_information"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/information"
                android:clickable="true"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/toolbutton"
        >
    </ViewFlipper>
    <LinearLayout
        android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/text_color_new"
            android:gravity="center"
            android:text="@string/empty_list_help"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_channel"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_add_channel_desc"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/predefined"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_predefined_desc"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/text_color_new"
            android:gravity="center"
            android:text="@string/empty_list_btn_desc"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_category"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_items_category"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_category"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_add_category"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_category"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_del_category"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/rename_category"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_rename_category"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_dnfiles"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_del_dnfiles"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/setting"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_setting"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="@dimen/chlist_bottom_btn_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/information"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/text_color_new"
                android:text="@string/empty_list_information"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
