<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- below HorizontalScrollView for bottom button is for debugging and future use. -->
    <HorizontalScrollView
        android:id="@+id/toolbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chlist_bottom_btn_height"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/btn_add_channel"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_channel"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_add_youtube_channel"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/youtube"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_items_favorite"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_favorite"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_items_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/items_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_add_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/add_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_del_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_rename_category"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/rename_category"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_del_dnfiles"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/del_dnfiles"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/setting"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_predefined"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/predefined"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_information"
                android:layout_width="@dimen/chlist_bottom_btn_width"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/information"
                android:clickable="true"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/toolbutton"
        >
    </ViewFlipper>
</RelativeLayout>
