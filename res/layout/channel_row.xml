<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
        android:layout_marginTop="3dip"
        android:paddingLeft="@dimen/list_item_left_padding"
		android:paddingRight="@dimen/list_item_left_padding"
	    android:layout_gravity="center_vertical"
	    >
	    <view
	        class="free.yhc.feeder.ChannelListAdapter$ImageViewEx"
	        android:id="@+id/image"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:layout_marginRight="5dip"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ic_block"
	        android:clickable="true"
	        />
	    <LinearLayout
	        android:id="@+id/update_pannel"
	        android:layout_width="50dip"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="3dip"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        >
	        <TextView
	            android:id="@+id/age"
	            android:layout_width="50dip"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/desc_text_size"
	            android:textColor="@color/title_color_new"
				android:gravity="center"	            
	            android:singleLine="true"
	            android:ellipsize="end"
	            />
	        <TextView
	            android:id="@+id/nr_new"
	            android:layout_width="50dip"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/desc_text_size"
	            android:textColor="@color/title_color_new"
	            android:gravity="center"
	            android:singleLine="true"
	            android:ellipsize="end"
	            />
		</LinearLayout>	  	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/image"
	        android:layout_toLeftOf="@id/update_pannel"
	        android:orientation="vertical"
	        >
	        <TextView
	            android:id="@+id/title"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/title_text_size"
	            android:textColor="@color/title_color_new"
	            android:singleLine="true"
	            android:ellipsize="end"
	            />
	        <TextView
	            android:id="@+id/date"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/misc_text_size"
	            android:textColor="@color/text_color_new"
	            android:singleLine="true"
	            android:ellipsize="end"
	            />
	        <TextView
	            android:id="@+id/description"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="2dip"
	            android:textSize="@dimen/desc_text_size"
	            android:textColor="@color/text_color_new"
	            android:maxLines="1"
	            android:ellipsize="end"
	            />
	    </LinearLayout>
	</RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="@dimen/divider_horizonal_margin"
        android:layout_marginRight="@dimen/divider_horizonal_margin"
        android:layout_marginTop="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/divider_horizontal_bright"
        />
</LinearLayout>