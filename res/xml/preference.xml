<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/setting">
        <ListPreference
            android:title="@string/pref_maxnr_bgtask"
            android:summary="@string/pref_maxnr_bgtask_desc"
            android:key="maxnr_bgtask"
            android:defaultValue="2"
            android:entries="@array/pref_maxnr_concurrent_entry"
            android:entryValues="@array/pref_maxnr_concurrent_value" />
        <ListPreference
            android:title="@string/pref_bgtask_prio"
            android:summary="@string/pref_bgtask_prio_desc"
            android:key="bgtask_prio"
            android:defaultValue="low"
            android:entries="@array/pref_bgtask_prio_entry"
            android:entryValues="@array/pref_bgtask_prio_value" />
        <ListPreference
            android:title="@string/pref_send_err_report"
            android:summary="@string/pref_send_err_report_desc"
            android:key="err_report"
            android:defaultValue="yes"
            android:entries="@array/pref_yes_no_entry"
            android:entryValues="@array/pref_yes_no_value" />
    </PreferenceCategory>
</PreferenceScreen>